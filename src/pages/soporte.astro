---
import "../styles/global.css";
import SoportePage from "../components/AgendateOnline/Soporte.tsx";

const title = "Soporte - AgéndateOnline";
const description = "Centro de soporte de AgéndateOnline. Envía tus reportes, sugerencias o consultas y te ayudaremos lo antes posible.";
const url = "https://www.agendateonline.com/ayuda";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Open Graph -->
    <meta property="og:site_name" content="AgéndateOnline" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>
  <body>
    <SoportePage client:load />
  </body>
</html>