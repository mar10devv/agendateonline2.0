---
import "../styles/global.css";
import NavbarBarberia from "../components/barberia/NavbarBarberia.tsx";
import HeroBarberia from "../components/barberia/HeroBarberia.tsx";

interface Props {
  title?: string;
  hoverColor?: string;
  logoUrl?: string;
  heroImages?: string[];
  modoImagenes?: "defecto" | "personalizado";   // ðŸ‘ˆ agregado
  nombre?: string;
  eslogan?: string;
  fuenteLogo?: string;
  fuenteTexto?: string;
  fuenteBotones?: string;
  children?: any;
}

const {
  title = "AgÃ©ndateOnline",
  hoverColor,
  logoUrl,
  heroImages = ["/img/1.jpeg", "/img/2.jpg", "/img/3.jpg"],
  modoImagenes = "defecto",                     // ðŸ‘ˆ agregado
  nombre,
  eslogan,
  fuenteLogo = "montserrat",
  fuenteTexto = "raleway",
  fuenteBotones = "poppins",
  children,
} = Astro.props as Props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | AgendateOnline</title>
  </head>
  <body class="bg-white text-black">
    <!-- âœ… Navbar con color hover y logo -->
    <NavbarBarberia 
      client:load 
      title={title} 
      hoverColor={hoverColor} 
      logoUrl={logoUrl} 
    />

    <!-- âœ… Hero con imÃ¡genes y fuentes dinÃ¡micas -->
    <HeroBarberia
      client:load
      images={heroImages}
      modoImagenes={modoImagenes}
      nombre={nombre || title}
      eslogan={eslogan}
      fuenteLogo={fuenteLogo}
      fuenteTexto={fuenteTexto}
      fuenteBotones={fuenteBotones}
    />

    <main>{children}</main>
  </body>
</html>
